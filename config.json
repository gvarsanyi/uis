{
  "uis": {
    "default": {
      "output": "plain",
      "watch": false,
      "singleRun": false,
      "service": {
        "interface": "",
        "port": 9081,
        "mount": "service/custom_logic.coffee",
        "contents": "static",
        "proxy": {
          "target": "http://localhost:9999",
          "pattern": "/dashboard-calendar-ui/api/*"
        },
        "reload": {
          "css": "deployMinified",
          "html": "deploy",
          "js": "deployMinified"
        }
      },
      "css": {
        "deploy": "static/site.css",
        "-deployMinified": "static/site.css",
        "rubysass": true,
        "repos": [
          {
            "repo": "sass/**/core.scss"
          }
        ]
      },
      "html": {
        "repos": [
          {
            "repo": ["jade/*.jade", "jade/partials/**/*.jade"],
            "basedir":   "jade/",
            "deploy": "static/",
            "-deployMinified": "static/"
          }
        ]
      },
      "js": {
        "deploy": "static/site.js",
        "-deployMinified": "static/site.js",
        "test": {
          "files": "test/**/*.coffee",
          "coverage": true
        },
        "repos": [
          {
            "repo": [
              "third-party/js/moment.js",
              "third-party/js/moment-timezone.js",
              "third-party/js/moment-timezone-data.js",
              "third-party/js/angular.js",
              "third-party/js/**/*.js"
            ],
            "thirdParty": true
          },
          {
            "repo": "third-party/js/test/**/*.js",
            "testOnly": true
          },
          {
            "repo": "coffee/**/*.coffee"
          }
        ]
      }
    }
  }
}
